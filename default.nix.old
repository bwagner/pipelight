{ pkgs, ... }:
{
  rustPlatform.buildRustPackage {
    pname = "app";
    version = "0.0.1";
    src = ./.;
    cargoBuildFlags = "-p pipelight";

    cargoLock = {
      lockFile = ./Cargo.lock;
    };

    nativeBuildInputs = [ pkgs.pkg-config ];
    PKG_CONFIG_PATH = "${pkgs.openssl.dev}/lib/pkgconfig";
  };
}
